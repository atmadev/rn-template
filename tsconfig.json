{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2019", "dom"],
		"jsx": "react-native",
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"screens/*": ["./sources/screens/*"],
			"assets/*": ["./assets/*"],
			"components/*": ["./sources/components/*"],
			"navigation": ["./sources/navigation"],
			"shared/*": ["./shared/*"]
		}
	}
}
