{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2021"],
		"jsx": "react-native",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"incremental": true,
		"baseUrl": "./sources/",
		"paths": {
			"assets/*": ["../assets/*"],
			"shared/*": ["../shared/*"],
			"resources/*": ["../resources/*"]
		}
	},
	"include": ["sources/**/*", "shared/**/*", "App.tsx"]
}
